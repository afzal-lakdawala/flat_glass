= content_for :breadcrumb do
  %ol.breadcrumb
    %li= link_to "Home", root_url
    %li= link_to @account.owner.username, user_path(@account.owner)
    %li= link_to @account.slug, user_account_path(@account.owner, @account.slug)
    %li= link_to "data", user_account_data_filzs_path(@account.owner, @account.slug)
    %li.active Pull data from APIs
.row
  .col-sm-12
    .panel.panel-default
      .panel-heading{style: "background: #F2F2F2;"} Pull data from APIs
      .panel-content{style: "padding: 10px;"}
        - if @data_queries.first.present?
          %table.table.table-condensed.table-hover
            - @data_queries.each do |query|
              %tr
                %td= query.name
                %td= query.source_s
                %td
                  = query.description
                  %br
                  .f12
                    %b Dimensions:
                    %span.gray= query.dimensions
                    %br
                    %b Metrics:
                    %span.gray= query.metrics
                %td
                  - if !query.is_oauth_done
                    Not connected
                  - elsif query.is_used
                    Already pulled
                  - else
                    = form_for(@api_filz, url: pull_user_account_data_filzs_path(@account.owner, @account.slug, qid: query.id), :html => { method: :post,  role: "form" }) do |f|
                      = select(:api_filz, :api_account_id, current_user.api_accounts.joins(:api_oauth).where(api_oauths: {app: query.source}).map{|z| [z.name, z.id]})
                      %br  
                      = f.submit "Pull", class: "btn btn-success", id: "submit"