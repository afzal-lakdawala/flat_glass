= content_for :breadcrumb do
  %ol.breadcrumb
    %li= link_to "Home", root_url
    %li= link_to @account.owner.username, user_path(@account.owner)
    %li= link_to @account.slug, user_account_path(@account.owner, @account.slug)
    %li= link_to "articles", user_account_cms_articles_path(@account.owner, @account.slug)
    %li= link_to @cms_article.title, user_account_cms_article_path(@account.owner, @account.slug, @cms_article.slug)
lkandfad
.row
  .col-sm-12
    .panel.panel-info
      .panel-heading
        = image_tag @cms_article.updator.gravatar
        = link_to @cms_article.updator.username, user_path(@cms_article.updator.username)
        %span.gray= "-- #{''}"
        .pull-right
          updated
          = time_ago_in_words(@cms_article.updated_at)
          ago
    .panel.panel-default
      .panel-heading
        %i.glyphicon.glyphicon-list-alt
        &nbsp;
        %b= @cms_article.slug
        %span.pull-right
          = link_to "Edit", edit_user_account_cms_article_path(@account.owner, @account.slug, @cms_article), class: "btn btn-default btn-xs"
          - if !@disable_delete
            = link_to "Delete", delete_user_account_cms_article_path(@account.owner, @account.slug, @cms_article),  confirm: 'Are you sure?', class: "btn btn-danger btn-xs"
      .panel-content{style: "padding: 10px;"}        
        .row  
          .col-sm-12
            #editor
              = text_area(:entry, :body, value: "#{@cms_article.description}", hidden: 'true', id: "input", class: "wmd-input")
            #preview.wmd-preview
          
:javascript
  $(document).ready(function() {
    $("#editor > #input").hide();
    new WMD("input", "toolbar", { preview: "preview" });
  });
