- url = create_user_account_cms_articles_path
- if @cms_article.id
  - url = update_user_account_cms_article_path(@account.owner, @account.slug, @cms_article.slug)
   
= form_for(@cms_article, url: url, html: {role: "form"}) do |f|

  .form-group
    %label Title
    = f.text_field :title, class: "form-control", required: true
  
  .form-group
    .row  
      .col-sm-6   
        %label Description
        = f.text_area :description, value: "", class: "form-control", required: true, id: "source"

      .col-sm-6{:style => "max-height: 420px;"}  
        %br
        #epiceditor-preview{:style => "min-height: 420px; overflow:auto; background-color:#e7cb94"}
          %article{style: "margin-left:20px;"}
            .editable
              = simple_format(@cms_article.description.html_safe)


  .form-group
    %label 
    = f.submit 'Save as Draft', class: "btn btn-success", id: "submit"
    = f.submit "Publish", class: "btn btn-info", id: "submit"
    = link_to "Cancel", user_account_cms_articles_path, class: "btn btn-danger"

:javascript
  $(document).ready(function() {
    $('.editable').hallo({editable: false});
    $("#source").val($(".editable").text().replace( /g | /  ,""));
  });
